(library
 (name picos)
 (public_name picos)
 (libraries
  backoff
  psq
  mtime
  mtime.clock.os
  (select
   TLS.ml
   from
   (threads.posix -> TLS.threads.ml)
   (-> TLS.dls.ml))
  (select
   systhreads.ml
   from
   (threads.posix -> systhreads.posix.ml)
   (-> systhreads.none.ml))
  (select
   select.ml
   from
   (unix -> select.unix.ml)
   (-> select.none.ml))))

;;

(rule
 (targets picos.ml)
 (deps picos.ocaml4.ml)
 (enabled_if
  (< %{ocaml_version} 5.0.0))
 (action
  (progn
   (copy picos.ocaml4.ml picos.ml))))

(rule
 (targets picos.ml)
 (deps picos.ocaml5.ml)
 (enabled_if
  (>= %{ocaml_version} 5.0.0))
 (action
  (progn
   (copy picos.ocaml5.ml picos.ml))))

;;

(rule
 (targets effects_intf.ml)
 (deps effects_intf.ocaml4.ml)
 (enabled_if
  (< %{ocaml_version} 5.0.0))
 (action
  (progn
   (copy effects_intf.ocaml4.ml effects_intf.ml))))

(rule
 (targets effects_intf.ml)
 (deps effects_intf.ocaml5.ml)
 (enabled_if
  (>= %{ocaml_version} 5.0.0))
 (action
  (progn
   (copy effects_intf.ocaml5.ml effects_intf.ml))))

;;

(rule
 (targets domain.ml)
 (deps domain.ocaml4.ml)
 (enabled_if
  (< %{ocaml_version} 5.0.0))
 (action
  (progn
   (copy domain.ocaml4.ml domain.ml))))

